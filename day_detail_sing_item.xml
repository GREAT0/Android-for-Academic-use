<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent"
    app:layout_editor_absoluteY="@dimen/cardview_default_elevation"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FCF8F8"
        android:clickable="false"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:importantForAccessibility="auto"
        android:layerType="none"
        android:saveEnabled="true"
        android:touchscreenBlocksFocus="true"
        android:transitionGroup="true"
        android:visibility="visible"
        tools:visibility="visible">

        <TextView
            android:id="@+id/TvDaydet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="false"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:autoText="true"
            android:clickable="true"
            android:contentDescription="Time"
            android:cursorVisible="true"
            android:enabled="true"
            android:filterTouchesWhenObscured="true"
            android:includeFontPadding="true"
            android:inputType="textAutoCorrect|text|textCapWords"
            android:keepScreenOn="true"
            android:linksClickable="true"
            android:saveEnabled="true"
            android:text="Periods"
            android:textColor="#99cc00"
            android:textDirection="firstStrongLtr"
            android:textIsSelectable="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible" />


        <EditText
            android:id="@+id/TvSpecSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="40dp"
            android:clickable="true"
            android:cursorVisible="true"
            android:editable="true"
            android:enabled="true"
            android:inputType="textShortMessage|text"
            android:linksClickable="true"
            android:saveEnabled="true"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:text="Course"
            android:textColor="#9933cc"
            android:textDirection="firstStrongLtr"
            android:textIsSelectable="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/TvSpecVenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="40dp"
            android:autoText="true"
            android:clickable="false"
            android:contentDescription="Lecture Venue"
            android:cursorVisible="true"
            android:editable="true"
            android:enabled="true"
            android:includeFontPadding="true"
            android:inputType="textShortMessage|textAutoCorrect|textMultiLine|text|textCapWords"
            android:keepScreenOn="true"
            android:linksClickable="false"
            android:saveEnabled="true"
            android:text="Venue"
            android:textColor="#669900"
            android:textDirection="firstStrongLtr"
            android:textIsSelectable="true"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/TvtimeDaydet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_marginLeft="250dp"
            android:addStatesFromChildren="true"
            android:amPmBackgroundColor="#12DF0B"
            android:amPmTextColor="#00F50707"
            android:animateLayoutChanges="true"
            android:animationCache="true"
            android:autoText="false"
            android:backgroundTintMode="src_in"
            android:clickable="true"
            android:contentDescription="Time"
            android:editable="true"
            android:enabled="true"
            android:focusableInTouchMode="true"
            android:foregroundTintMode="src_in"
            android:headerAmPmTextAppearance="@style/TextAppearance.AppCompat.Body1"
            android:importantForAccessibility="no"
            android:includeFontPadding="true"
            android:keepScreenOn="false"
            android:layoutMode="clipBounds"
            android:linksClickable="true"
            android:measureAllChildren="true"
            android:minHeight="6dp"
            android:numbersBackgroundColor="#0D2BEC"
            android:numbersTextColor="#C809E9"
            android:overScrollMode="always"
            android:saveEnabled="true"
            android:splitMotionEvents="true"
            android:text="Time"
            android:textColor="@color/colorPrimary"
            android:textDirection="locale"
            android:textIsSelectable="true"
            android:textSize="12sp"
            android:timePickerMode="spinner"
            android:visibility="visible"
            tools:visibility="visible" />

        <!-- <ImageView
            android:id="@+id/ivDaydet"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:src="@drawable/sss" />-->
    </RelativeLayout>


</androidx.cardview.widget.CardView>