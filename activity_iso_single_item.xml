<androidx.cardview.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:elevation="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvStafname"
            android:textStyle="bold"
            android:text="StaffNmae"
            android:layout_marginLeft="102dp"
            android:textColor="@color/colorAccent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvStaffPos"
            android:text="StaffPos"
            android:textAllCaps="false"
            android:layout_marginTop="16dp"
            android:textColor="#9009"
            android:textSize="14sp"
            android:layout_marginLeft="102dp"
            android:layout_below="@+id/tvStafname"
            />

        <ImageView
            android:id="@+id/Isoimage"
            android:layout_width="90dp"
            android:layout_height="102dp"
            android:layout_marginLeft="@dimen/cardview_default_elevation">
        </ImageView>

        <TextView
            android:id="@+id/tvContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="102dp"
            android:text="Contact"
            android:autoLink="all"
            android:layout_below="@id/tvStaffPos"
            android:linksClickable="true"
            android:layout_marginTop="4dp"
            android:textColor="#045FFA"
            android:textSize="12sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>